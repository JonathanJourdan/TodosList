{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        //"noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2015",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        "lib": ["dom", "es2015", "es2016", "es2020"]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "types": [
        "react",
        "react-dom"
    ]
}